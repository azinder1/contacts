<h2>Add a phone number to <%=@contact.first_name()%></h2>
<form action="/contacts/<%=@contact.id()%>/phone_numbers/new" method="post">
  <input type="hidden" name="contact_id" value="<%=@contact.id()%>">
  <div class="form-group">
    <label for="area_code">Area Code:</label>
    <input type="text" name="area_code" id="area_code" class="form-control">
    <label for="phone_number">Phone Number:</label>
    <input type="text" name="phone_number" id="phone_number" class="form-control">
  </div>
  <div class="form-group">
    <label for="type">Type:</label>
    <select class="type form-control" name="type">
      <option>Home</option>
      <option>Work</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
