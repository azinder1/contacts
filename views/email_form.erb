<h2>Add a email address to <%=@contact.first_name()%></h2>
<!-- <form action="/contacts/<%=@contact.id()%>/email_addresses/new" method="post"> -->
<form action="/contacts/email_addresses/new" method="post">
  <input type="hidden" name="contact_id" value="<%=@contact.id()%>">
  <div class="form-group">
    <label for="email_address">Email Address:</label>
    <input type="text" name="email_address" id="email_address" class="form-control">
  </div>
  <div class="form-group">
    <label for="type">Type:</label>
    <select class="type form-control" name="type">
      <option>Home</option>
      <option>Work</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
